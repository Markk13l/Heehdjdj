-- Create a ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Create a TextButton
local textButton = Instance.new("TextButton")
textButton.Parent = screenGui
textButton.Size = UDim2.new(0, 220, 0, 60) -- Size: 220x60 pixels
textButton.Position = UDim2.new(0.5, -110, 0.5, -220) -- Center of the screen
textButton.TextColor3 = Color3.fromRGB(30, 30, 30)
textButton.Text = "Lock"

-- Create a UICorner for rounded corners
local uiCorner = Instance.new("UICorner")
uiCorner.CornerRadius = UDim.new(0, 8)
uiCorner.Parent = textButton

-- Notification function
local function Notify(tx)
    print("[Notification] " .. tx)
    -- You can replace this with your own notification system
    -- Example: SG:SetCore("SendNotification", { Title = "Aimlock", Text = tx, Duration = 5 })
end

-- Variables (Service)
local Players = game:GetService("Players")
local RS = game:GetService("RunService")
local WS = game:GetService("Workspace")
local GS = game:GetService("GuiService")
local SG = game:GetService("StarterGui")

-- Variables (regular)
local LP = Players.LocalPlayer
local Mouse = LP:GetMouse()
local Camera = WS.CurrentCamera
local GetGuiInset = GS.GetGuiInset

local AimlockState = true
local Locked
local Victim

-- Function to get closest player
local function getClosest()
    local closestPlayer
    local shortestDistance = math.huge

    for i, v in pairs(game.Players:GetPlayers()) do
        local notKO = v.Character:FindFirstChild("BodyEffects") and v.Character.BodyEffects:FindFirstChild("K.O") and v.Character.BodyEffects["K.O"].Value ~= true
        local notGrabbed = not v.Character:FindFirstChild("GRABBING_COINSTRAINT")

        if v ~= game.Players.LocalPlayer and v.Character and v.Character:FindFirstChild("Humanoid") and v.Character.Humanoid.Health ~= 0 and v.Character:FindFirstChild("HumanoidRootPart") and v.Character:FindFirstChild("UpperTorso") and notKO and notGrabbed then
            local pos = Camera:WorldToViewportPoint(v.Character.HumanoidRootPart.Position)
            local magnitude = (Vector2.new(pos.X, pos.Y) - Vector2.new(Mouse.X, Mouse.Y)).magnitude

            if magnitude < shortestDistance then
                closestPlayer = v
                shortestDistance = magnitude
            end
        end
    end

    return closestPlayer
end

-- Event listener for button click
textButton.MouseButton1Click:Connect(function()
    if AimlockState == true then
        Locked = not Locked
        if Locked then
            Victim = getClosest()
            if Victim then
                Notify("Locked onto: " .. tostring(Victim.Name))
            else
                Notify("No valid target found.")
            end
        else
            Victim = nil
            Notify("Unlocked!")
        end
    else
        Notify("Aimlock is not enabled!")
    end
end)

-- Loop to update aimlock
RS.RenderStepped:Connect(function()
    if AimlockState == true then
        if Victim then
            local lookAt = Victim.Character.UpperTorso.Position
            local lookPosition = Camera.CFrame:ToWorldSpace(CFrame.new(lookAt))

            -- Adjust Camera CFrame smoothly
            Camera.CFrame = Camera.CFrame:Lerp(CFrame.new(Camera.CFrame.Position, lookPosition.p), 0.2)
        end
    end
end)

for _, con in next, getconnections(workspace.CurrentCamera.Changed) do
  task.wait()
    con:Disable()
end
for _, con in next, getconnections(workspace.CurrentCamera:GetPropertyChangedSignal("CFrame")) do
   task.wait()
    con:Disable()
end
